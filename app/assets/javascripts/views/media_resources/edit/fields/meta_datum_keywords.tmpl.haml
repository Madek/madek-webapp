.multi-select
  
  %ul.multi-select-holder

    {{tmpl(meta_datum.raw_value) App.renderPath("media_resources/edit/multi-select/keyword")}}

    %li.multi-select-input-holder.mbs
      %input.multi-select-input.form-autocomplete-keywords{:type => "text"}
        %a.multi-select-input-toggle

    %a.button.small.form-widget-toggle
      %i.icon-tag.dark

    .form-tags-widget.form-widget.hidden

      %ul.ui-tabs
        %li.ui-tabs-item.active.mll.pls
          %a{"data-toggle" => "tab", :href => "#tags_mine_${index}"} Meine Schlagworte
        %li.ui-tabs-item
          %a{"data-toggle" => "tab", :href => "#tags_top_${index}"} Beliebtesten
        %li.ui-tabs-item
          %a{"data-toggle" => "tab", :href => "#tags_latest_${index}"} Neusten
      .tab-content.mbs

        .tags-mine.tab-pane.active.pam.ui-container.bordered.rounded-right.rounded-bottom{:id => "tags_mine_${index}"}
          %ul.ui-tag-cloud.small
            .title-xs.by-center Lade Schlagworte
            .ui-preloader.small
           
        .tags-top.tab-pane.pam.ui-container.bordered.rounded-right.rounded-bottom{:id => "tags_top_${index}"}
          %ul.ui-tag-cloud.small
            .title-xs.by-center Lade Schlagworte
            .ui-preloader.small

        .tags-latest.tab-pane.pam.ui-container.bordered.rounded-right.rounded-bottom{:id => "tags_latest_${index}"}
          %ul.ui-tag-cloud.small
            .title-xs.by-center Lade Schlagworte
            .ui-preloader.small
