:ruby

  placeholder_text = if @a_top_keyword
    "z.B. #{@a_top_keyword[:label]}"
  else
    nil
  end

.app.view-search

  = render "application/header"

  .app-body
    .app-body-title
      .ui-body-title
        .ui-body-title-label
          %h1.title-xl Suche

        .ui-body-title-actions= render :partial => "login_action", :locals => {:primary => false}

    .app-body-ui-container
      .bordered.ui-container.midtone.rounded.table
        .ui-search-form
          %form{:action => search_path, :method => :post}
            = token_tag nil
            .ui-search.large.mbm
              %input.block.ui-search-input{:type => "text", :name => "search", :autofocus => :autofocus, :placeholder => placeholder_text}
              %input.button.primary-button.ui-search-button{type: 'submit'} Suchen

  .app-footer-push
= render :partial => "application/footer"
