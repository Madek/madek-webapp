.ui-resources-holder.pal#keywords
  .ui-resources-header
    %h2.title-l.ui-resource-title
      = section_content[:data][:title]
      %a.strong{href: section_content[:data][:url]}
        - if section_content[:show_all_text]
          = section_content[:show_all_text]
        - else
          = t(:vocabularies_show_all)
  %ul.ui-tag-cloud{style: "margin-bottom:40px;"}
    - section_content[:data][:list].each do |keyword|
      = render "application/root/keywords/keyword", keyword: keyword
