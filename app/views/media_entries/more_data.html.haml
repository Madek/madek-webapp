- tag_mods = ['small','ellipsed']
- content_for(:overview) do
  .col1of3
    .ui-container.prm
      %h3.title-l.separated.mbm
        = t(:media_entry_more_data_title)
      :ruby
        more_meta_data_list = [
          ['responsible', deco('person-tag-list',
                            person: @get.more_data.responsible,
                            mods: tag_mods)],
          ['importer', deco('person-tag-list',
                        person: @get.more_data.importer,
                        mods: tag_mods)],
          ['import_date', @get.more_data.import_date]
        ]
      = combo('metadata-box', mods: 'ui-summary-table', list: more_meta_data_list)

  .col2of3
    .ui-container.plm
      %h3.title-l.separated.mbm= t(:media_entry_all_metadata_title)
      = react('Deco.MetaDataByListing', list: @get.meta_data.by_vocabulary)

      %h3.title-l.separated.mvm
        = t(:media_entry_file_information_title)
      = combo('metadata-box',
          mods: 'ui-summary-table', list: @get.more_data.file_information)




= render template: 'media_entries/_show/_base'
