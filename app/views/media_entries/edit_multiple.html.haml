                          .ui-form-group.rowed
                            %label.form-label Name
                            .form-item
                              %input.block{:type => "text"}/
                          .ui-form-group.rowed.pts
                            %button.button.block Gruppendaten einfügen
                .ui-form-group.columned
                  %label.form-label
                    Datierung
