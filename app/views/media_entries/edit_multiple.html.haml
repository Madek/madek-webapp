.app.view-media-entry-edit

  = render "application/header"

  .app-body

    .app-body-title
      .ui-body-title
        .ui-body-title-label
          %h1.title-xl Metadata editieren

    .app-body-ui-container

      .bordered.ui-container.midtone.rounded.mbm

        = render :partial => "media_resources/selection",
                 :locals => {:media_resources => @media_entries}

      %form

        // TABS

        %ul.ui-tabs.large
          %li.ui-tabs-item.active
            %a{"data-toggle" => "tab", :href => "#werk"} Werk
          %li.ui-tabs-item
            %a{"data-toggle" => "tab", :href => "#medium"} Medium
          %li.ui-tabs-item
            %a{"data-toggle" => "tab", :href => "#credits"} Credits
          %li.ui-tabs-item
            %a{"data-toggle" => "tab", :href => "#zhdk"} ZHdK
          %li.ui-tabs-item
            %a{"data-toggle" => "tab", :href => "#lehrmittel-fotografie"} Lehrmittel Fotografie

        // TAB CONTENT

        .bordered.ui-container.tab-content.bright.rounded-bottom.rounded-right

          .tab-pane.active#werk.phl.ptl
            .app-body-content
              .form-head
                %h2.title-l

              .form-body
                .ui-form-group.columned
                  %label.form-label
                    Titel
                    %small des Werks oder einer Werkserie
                  .form-item
                    %input.block{:type => "text"}/
                .ui-form-group.columned
                  %label.form-label
                    Untertitel
                    %span.ui-form-ui-ttip-toggle.ui-ttip-toggle{"data-placement" => "left", :rel => "tooltip", :title => "Der Untertitel erweitert den Titel des Werks oder der Werkserie mit zusätzlichen Informationen. Nicht zu verwechseln mit der Bildlegende oder dem Untertitel eines Films (siehe dort)."}
                      More Info
                  .form-item
                    %input.block{:type => "text"}/
                .ui-form-group.columned
                  %label.form-label
                    Autor/in
                    %small Eingabeform: Nachname, Vorname
                    %span.ui-form-ui-ttip-toggle.ui-ttip-toggle{"data-placement" => "left", :rel => "tooltip", :title => "Urheber/in des Werkes. Wer hat das Werk erschaffen? Handelt es sich um einen historischen Künstler oder eine zeitgenössische Komponistin? Sind Sie selbst Urheber/in? Auch Pseudonyme und Personengruppen (z.B. Künstlergruppe, Atelier, Firma) sind möglich."}
                      More Info
                  .form-item
                    %input.block{:type => "text"}/
                    %a.button.small.form-person-widget-toggle
                      %i.icon-privacy-private
                    .form-person-widget
                      %ul.ui-tabs
                        %li.ui-tabs-item.active
                          %a{"data-toggle" => "tab", :href => "#person1"} Person
                        %li.ui-tabs-item
                          %a{"data-toggle" => "tab", :href => "#gruppe1"} Gruppe
                      .tab-content.mbs
                        #person1.tab-pane.active.pam.ui-container.bordered.rounded-right.rounded-bottom
                          .ui-form-group.rowed
                            %label.form-label Nachname
                            .form-item
                              %input.block{:type => "text"}/
                          .ui-form-group.rowed
                            %label.form-label Vorname
                            .form-item
                              %input.block{:type => "text"}/
                          .ui-form-group.rowed
                            %label.form-label Pseudonym
                            .form-item
                              %input.block{:type => "text"}/
