    .app-body-ui-container

      // TABS

      %ul.ui-tabs.large
        %li.ui-tabs-item.active
          %a{"data-toggle" => "tab", :href => "#ui-media-overview"} Media
        %li.ui-tabs-item
          %a{"data-toggle" => "tab", :href => "#parenting-sets"} Übergeordnete Sets
        %li.ui-tabs-item
          %a{"data-toggle" => "tab", :href => "#kontext"} Kontexte
        %li.ui-tabs-item
          %a{"data-toggle" => "tab", :href => "#other-data"} Weitere Daten
        %li.ui-tabs-item
          %a{"data-toggle" => "tab", :href => "#location-data"} Google Maps

