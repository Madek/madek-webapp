                %dd.media-data-content.title-l Die Eismalerin
                %dt.media-data-title.title-xs-alt Untertitel
                %dd.media-data-content Installationsansicht
                %dt.media-data-title.title-xs-alt Autor/in
                %dd.media-data-content
                  %a{:href => "#"} Stemmle, Janka
                %dt.media-data-title.title-xs-alt Datierrung
                %dd.media-data-content 2012
                %dt.media-data-title.title-xs-alt Schlagworte zu Inhalt und Motiv
                %dd.media-data-content
                  %ul.ui-tag-cloud.small
                    %li.tag-button
                      %a{:href => "#"} Tag 1
                    %li.tag-button
                      %a{:href => "#"} Tag 2
                %dt.media-data-title.title-xs-alt Rechte am geistigen Eigentum
                %dd.media-data-content ZHdK DKM VMK
                %dt.media-data-title.title-xs-alt Privacy
                %dd.media-data-content
                  This entry is public
                  %i.icon-privacy-public
                %dt.media-data-title.title-xs-alt Eigentumer/in im Medienarchiv
                %dd.media-data-content
