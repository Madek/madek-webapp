                        %li
                          %a{:href => "#"} Stemmle, Janka
                    %dt.media-data-title.title-xs Medienersteller/in
                    %dd.media-data-content
                      %ul.inline
                        %li
                          %a{:href => "#"} Stemmle, Janka
                        %li
                          %a{:href => "#"} Stemmle, Janka

              .col1of4
                .ui-metadata-box.phm
                  %h3.title-l.separated.mbm Rechte
                  %dl.media-data
