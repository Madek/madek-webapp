:ruby
  element = {
    name: 'Sample rowed form', todo: true,
    cssFile: '_forms.scss',
    cssSelector: 'form',
    section: '5.1.1',
    example_locals: {
      head: combo('alerts',
        list: [
          { level: 'error', text: "There's an error in this form." },
          { level: 'warning', text: "There's also a warning/highlight." }]),
      body: nil, # captured below
      footer: nil # captured below
    }
  }

- element[:example_locals][:body] = capture_haml do
  = combo('form-group', mods: 'rowed', label: { text: 'Checkboxes',
        comment: 'Comment if needed',
        hint: 'Tooltip Text' }) do
    %label.col2of6
      %input{:type => 'checkbox'}/
      Checkbox
    %label.col2of6
      %input{:type => 'checkbox'}/
      Checkbox
    %label.col2of6
