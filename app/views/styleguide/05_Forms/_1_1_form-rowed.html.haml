      Checkbox

  = combo('form-group', mods: 'rowed', label: { text: 'Radios',
        comment: 'Comment if needed',
        hint: 'Tooltip Text' }) do
    %label.col2of6
      %input{:type => 'radio'}/
      Radio button
    %label.col2of6
      %input{:type => 'radio'}/
      Radio button
    %label.col2of6
      %input{:type => 'radio'}/
      Radio button

  = combo('form-group', mods: 'rowed', label: { text: 'Date',
        comment: 'Comment if needed',
        hint: 'Tooltip Text' }) do
    %input.block.ui-datepicker{:type => 'text'}/

  = combo('form-group', mods: 'rowed', label: { text: 'Text',
        comment: 'Comment if needed',
        hint: 'Tooltip Text' }) do
    %input.block{:type => 'text'}/

  = combo('form-group', mods: 'rowed', label: { text: 'Text',
        comment: { mods: 'clear', text: 'Comment if needed'},
        hint: 'Tooltip Text' }) do
    %input.block{:type => 'text'}/

