        comment: 'Comment if needed',
        hint: 'Tooltip Text' }) do
    %input.block{:type => 'text'}/

- element[:example_locals][:footer] = capture_haml do
  .ui-actions
    %a.link.weak Secondary Action
    %button.primary-button.large Primary Action

= render_partial('element', element) do
  = render_partial('example') do

    = combo('form', element[:example_locals])
