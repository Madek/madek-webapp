:ruby
  element = {
    name: 'Arrow Icons',
    cssFile: '_icons.scss',
    cssSelector: '.icon-arrow-{name}',
    section: '6.1',
    description: 'By default, icons inherit font colour from their parent. A few modifier classes are provided to alter icon\'s colour when needed. Arrow icons come also with small size variation.',
    mods: {
      nil => 'Default',
      'bright' => 'White variation',
      'mid' => 'Grey variation',
      'branded' => 'Branded variation',
      'small' => 'Small variation',
      'branded.small' => 'Small Branded Variation'
    }
  }

= render_partial('element', element) do
  - element[:mods].each do |mod, description|
    = render_partial('example', { mod: mod}) do

      =component('icon.arrow-up', mod)
      =component('icon.arrow-right', mod)
      =component('icon.arrow-down', mod)
      =component('icon.arrow-left', mod)
