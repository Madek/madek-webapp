:ruby
  element = {
    name: 'Confirmation dialog', todo: true,
    cssFile: '_ui-confirmation-dialog.scss',
    cssSelector: '.modal',
    section: '8.15'
  }

= render_partial('element', element) do
  = render_partial('example') do

    .modal.hide.fade.ui-modal.narrow.in.ui-shown{:style => "display: block;", :tabindex => "-1"}
      %form
        .ui-modal-head
          %a.ui-modal-close{"data-dismiss" => "modal", :title => "Close", :type => "button"}
          %h3.title-l Confirmation Modal
        .ui-modal-body{:style => "max-height: 886.21875px;"}
          %p.phl.pvm.by-center Are you sure?
        .ui-modal-footer
          .ui-actions
            %a.link.weak{"data-dismiss" => "modal"} No
            %button.primary-button{:type => "submit"} Yes
