.page-header
  %h1
    %i.icon-media-entry
    Media Entry: #{@media_entry.title}

.row
  .col-xs-12
    .panel.panel-default
      .panel-body
        .btn-group
          = link_to admin_media_file_path(@media_entry.media_file), class: 'btn btn-default' do
            Media-File: #{@media_entry.media_file.id}
          = link_to admin_meta_datums_path(search_term: @media_entry.id, search_by: :media_entry_id), class: 'btn btn-default' do
            Meta Datums: #{@media_entry.meta_data.count}

.row
  .col-xs-12
    %table.table.table-striped
      %thead
      %tbody
        - @media_entry.attributes.each do |attr|
          %tr
            %td
              %strong= attr.first.humanize
            %td= attr.last
