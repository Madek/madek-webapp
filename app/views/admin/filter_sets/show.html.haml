.page-header
  %h1
    %i.glyphicon.glyphicon-filter
    #{@filter_set.title}

.row
  .col-xs-12
    .panel.panel-default
      .panel-body
        .btn-group
          = link_to admin_user_path(@user), class: 'btn btn-default' do
            %i.glyphicon.glyphicon-user
            User: #{@user.person}
          = link_to admin_meta_datums_path(search_term: @filter_set.id, search_by: :filter_set_id), class: 'btn btn-default' do
            Meta Datums: #{@filter_set.meta_data.count}

.row
  .col-xs-12
    %table.table.table-striped
      %thead
      %tbody
      - @filter_set.attributes.each do |name, value|
        %tr
          %td= name.humanize
          - case name
          - when 'filter'
            %td
              %pre= value.to_yaml
          - else
            %td= value
