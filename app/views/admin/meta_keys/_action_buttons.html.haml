= link_to edit_admin_meta_key_path(meta_key), class: "btn btn-info #{size}" do
  %span.glyphicon.glyphicon-edit
  Edit
= link_to admin_meta_key_path(meta_key), method: :delete,
    data: { confirm: 'The meta key will be deleted. Do you want to proceed?' },
    class: "btn btn-danger #{size}" do
  %i.glyphicon.glyphicon-trash
  Delete
- if meta_key.vocabulary
  = link_to 'Vocabulary', admin_vocabulary_path(meta_key.vocabulary),
      class: "btn btn-default #{size}"
