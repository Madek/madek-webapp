.page-header
  %h1
    Vocabulary User Permissions
    %small Vocabulary: #{@vocabulary.id}

.row
  .col-xs-12
    .panel.panel-default
      .panel-body
        .btn-group
          = link_to new_admin_vocabulary_vocabulary_user_permission_path(@vocabulary),
              class: 'btn btn-default' do
            %i.glyphicon.glyphicon-plus
            Create User Permission

.row
  .col-xs-12
    %table.table.table-striped
      %thead
        %tr
          %th User
          %th Can use?
          %th Can view?
          %th
      %tbody
        = render partial: 'user_permission', collection: @user_permissions, as: :user_permission
