.page-header
  %h1
    Edit "#{@field.humanize}" Setting

.row
  .col-xs-12
    = form_for [:admin, @app_settings], html: { class: 'form-horizontal', role: 'form' } do |f|

      .form-group
        .col-xs-6
          - if @field == 'sitemap'
            = f.text_area  :sitemap, value: @app_settings.sitemap.to_yaml, rows: 12, class: 'form-control'
          - else
            = f.text_field @field, class: 'form-control'
      .form-group
        .col-xs-offset2.col-xs-4
          = button_tag type: 'submit', class: 'btn btn-success' do
            Save
