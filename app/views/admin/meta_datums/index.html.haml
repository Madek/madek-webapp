.page-header
  %h1 Meta Datums (#{@meta_datums.total_count})

.row
  .col-xs-12
    .panel.panel-default
      .panel-heading
        .panel-title Filters
      .panel-body
        = form_tag admin_meta_datums_path, method: :get, class: 'form-inline' do
          .form-group
            = text_field_tag :search_term, params[:search_term], size: 28,
              class: 'form-control', placeholder: 'Search term'
          .form-group
            = label_tag :search_by, 'Search by', class: 'form-label'
            = select_tag :search_by,                   |
                options_for_select(                    |
                  [['ID', :id], ['String', :string],   |
                  ['Media Entry ID', :media_entry_id], |
                  ['Collection ID', :collection_id],   |
                  ['Filter Set ID', :filter_set_id]],  |
                  params[:search_by]),                 |
                class: 'form-control'
          .form-group
            = label_tag :type, 'Type', class: 'form-label'
            = select_tag :type,
                options_for_select(['', MetaKey.object_types].flatten, params[:type]),
                class: 'form-control'

          = submit_tag 'Apply', class: 'btn btn-primary'
          = link_to 'Reset', admin_meta_datums_path, class: 'btn btn-default'

.row
  .col-xs-12
    %table.table.table-striped
      %thead
        %tr
          %th ID
          %th String
          %th Meta Key
          %th Type
          %th
      %tbody
        = render partial: 'meta_datum', collection: @meta_datums

= paginate @meta_datums
