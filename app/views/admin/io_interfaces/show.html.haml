.page-header
  %h1 IO Interface: #{@io_interface.id}

.row
  .col-xs-12
    .panel.panel-default
      .panel-body
        .btn-group
          = link_to admin_io_interface_path(@io_interface), method: :delete,
              data: { confirm: 'The meta key will be deleted. Do you want to proceed?' },
              class: "btn btn-danger" do
            %i.glyphicon.glyphicon-trash
            Delete

.row
  .col-xs-12
    %table.table.table-striped
      %thead
      %tbody
        - @io_interface.attributes.each do |attr|
          %tr
            %td
              %strong= attr.first.humanize
            %td= attr.last
