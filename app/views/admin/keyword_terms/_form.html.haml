= form_for [:admin, @vocabulary, @keyword_term], as: :keyword_term, html: { class: 'form-horizontal', role: 'form' } do |f|
  - if @keyword_term.persisted?
    .form-group
      .col-xs-1
        = f.label :id, 'ID', class: 'control-label'
      .col-xs-6
        = f.text_field :id, class: 'form-control', disabled: true
  .form-group
    .col-xs-1
      = f.label :meta_key_id, 'MetaKey', class: 'control-label'
    .col-xs-6
      = f.select :meta_key_id, @vocabulary.meta_keys.all.collect(&:id), {}, class: 'form-control'
  .form-group
    .col-xs-1
      = f.label :term, 'Term', class: 'control-label'
    .col-xs-6
      = f.text_field :term, class: 'form-control'
  .form-group
    .col-xs-offset-1.col-xs-3
      = button_tag type: 'submit', class: 'btn btn-success' do
        %span.glyphicon.glyphicon-ok
        Save
      = link_to 'Go back', admin_vocabulary_keyword_terms_path(@vocabulary), class: 'btn btn-link'
