.page-header
  %h1
    Vocables
    %small Vocabulary: #{@vocabulary.id}

.row
  .col-xs-12
    .panel.panel-default
      .panel-heading
        .panel-title Filters
      .panel-body
        = form_tag admin_vocabulary_vocables_path(@vocabulary), method: :get, class: 'form-inline' do
          .form-group
            = text_field_tag :search_term, params[:search_term], size: 50,
              class: 'form-control', placeholder: 'ID, term or MetaKey'

          = submit_tag 'Apply', class: 'btn btn-primary'
          = link_to 'Reset', admin_vocabulary_vocables_path(@vocabulary), class: 'btn btn-default'
    .btn-group
      = link_to new_admin_vocabulary_vocable_path(@vocabulary), class: 'btn btn-default' do
        %i.glyphicon.glyphicon-plus
        Create vocable

.row
  .col-xs-12
    %table.table.table-striped
      %thead
        %tr
          %th ID
          %th MetaKey
          %th Term
          %th
      %tbody
        = render @vocables

= paginate @vocables
