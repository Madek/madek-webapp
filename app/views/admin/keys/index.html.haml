%table
	%tr
		%td{:colspan => 5, :style => "text-align: right; white-space: nowrap;"}
			= link_to _("New Key"), new_admin_key_path, :class => "buttons", :remote => true, :"data-type" => "html"
	%tr
		%th
			Label
		%th
			Object Type
		%th
			Is Dynamic
		%th
			Terms
		%th
	- @keys.each_with_index do |key, index|
		%tr{:class => ((index % 2).zero? ? "even" : "odd")}
			%td= key.label
			%td
				= key.object_type
				-  if key.is_extensible_list?
					%br
					= _("extensible list")
			%td= key.is_dynamic
			%td
				- if key.meta_terms
					%ul
						- key.meta_terms.each do |term|
							%li= term.to_s
			%td.with_actions
				= link_to _("Edit"), edit_admin_key_path(key), :class => "buttons", :remote => true, :"data-type" => "html"
				%br
				= link_to _("Delete"), admin_key_path(key), :class => "buttons", :method => :delete, :confirm => _("Sind Sie sicher?") if key.meta_key_definitions.empty?
