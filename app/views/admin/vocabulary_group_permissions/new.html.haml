.page-header
  %h1
    New Group Permission
    %small Vocabulary: #{@vocabulary}

.row
  .col-xs-12
    = form_for [:admin, @vocabulary, @permission],
        method: :post,
        as: :vocabulary_group_permission,
        url: admin_vocabulary_vocabulary_group_permissions_path(@vocabulary, reset_vocabulary_params: true),
        html: { class: 'form-horizontal', role: 'form' } do |f|
      = render partial: 'form_fields', locals: { f: f }
