= form_for [:admin, @person], html: { class: 'form-horizontal', role: 'form' } do |f|

  %fieldset
    .form-group
      %label.control-label.col-xs-2 First name
      .col-xs-4
        = f.text_field :first_name, class: 'form-control'

    .form-group
      %label.control-label.col-xs-2 Last name
      .col-xs-4
        = f.text_field :last_name, class: 'form-control'

    .form-group
      %label.control-label.col-xs-2 Pseudonym
      .col-xs-4
        = f.text_field :pseudonym, class: 'form-control'

    .form-group
      %label.control-label.col-xs-2 Date of birth
      .col-xs-4
        = f.text_field :date_of_birth, type: 'date', class: 'form-control'

    .form-group
      %label.control-label.col-xs-2 Date of death
      .col-xs-4
        = f.text_field :date_of_death, type: 'date', class: 'form-control'

    .form-group
      %label.control-label.col-xs-2 Is bunch
      .col-xs-1
        = f.check_box :is_bunch, class: 'form-control'
    .form-group
      .col-xs-offset-2.col-xs-4
        = button_tag type: 'submit', class: 'btn btn-success' do
          %span.glyphicon.glyphicon-ok
          Save
        = link_to 'Go back', @person.persisted? ? admin_person_path(@person) : admin_people_path, class: 'btn btn-link'
