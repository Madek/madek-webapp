<%=

is_clipboard = section[:id] == :clipboard
is_unpublished_entries = section[:id] == :unpublished_entries
ui_component = !is_clipboard ? 'Deco.MediaResourcesBox' : 'Views.My.ClipboardBox'

with_box = true
mods = ['rounded-right', { bordered: false }]
fallback = section[:is_empty?] ? true : false

react(ui_component,
    get: @get.send(section[:id]),
    mods: mods,
    withBox: with_box,
    fallback: fallback,
    initial: {
      show_filter: false,
      is_clipboard: is_clipboard
    },
    enableOrdering: true,
    enableOrderByTitle: !is_unpublished_entries,
    draftsView: section[:id] == :unpublished_entries)


  %>
