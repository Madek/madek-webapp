- content_for(:page_content) do
  = form_for :group, method: :patch, url: @get.url do |g_form|

    = g_form.label :name, class: 'title-s'
    = g_form.text_field :name, value: @get.name

    %hr.separator.mini.mvs

    = g_form.submit :submit

  %hr.separator.mini.mvs

  = deco('workgroup_members_table', data: @get.members)

  = form_for :member, method: :post, url: add_member_my_group_path(@get.uuid) do |m_form|
    = m_form.label :login, class: 'title-s'
    = m_form.text_field :login
    = m_form.submit 'Add member'
