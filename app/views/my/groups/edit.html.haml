:ruby
  member_field_name = 'group[user][login][]'

- content_for(:page_content) do
  = form_for :group, method: :put, url: @get.url do |g_form|

    = g_form.label :name, class: 'title-s'
    = g_form.text_field :name, value: @get.name

    %hr.separator.mini.mvs

    = deco('workgroup_members_table', data: @get.members, props: { member_field_name: member_field_name })

    %hr.separator.mini.mvs

    = label_tag member_field_name, t(:group_edit_form_new_member_login), class: 'title-s'
    = text_field_tag member_field_name

    %hr.separator.mini.mvs

    = g_form.submit
