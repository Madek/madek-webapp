:ruby
  get ||= nil
  fail 'No Presenter!' unless get.is_a?(Presenter)

  thumb = {
    mods: ['media-set'],
    title: get.title,
    href: get.url,
    picture: get.image_url,
    meta: {
      title: get.title
    },
    badge_top_left: deco('privacy-status-icon', get: get)
  }

= component('thumbnail', thumb)
